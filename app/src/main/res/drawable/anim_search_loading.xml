<?xml version="1.0" encoding="utf-8"?>
<!-- 搜索动画,动画由多张静态图片构成
    android:oneshot：true表示单次播放,false表示循环播放
-->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">

    <item
        android:drawable="@drawable/search_loading_0"
        android:duration="100" />
    <item
        android:drawable="@drawable/search_loading_1"
        android:duration="100" />
    <item
        android:drawable="@drawable/search_loading_2"
        android:duration="100" />
    <item
        android:drawable="@drawable/search_loading_3"
        android:duration="100" />

</animation-list>